{
    "name": "xsolla/sdk-php",
    "type": "library",
    "description": "Xsolla SDK for PHP - Payment and Game Distribution API Integration",
    "keywords": ["xsolla", "sdk", "payment", "api"],
    "license": "MIT",
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpstan/phpstan": "^1.0",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Xsolla\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Xsolla\\SDK\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}

